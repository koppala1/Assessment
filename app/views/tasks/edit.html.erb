<h1 class="text-center" style="color: #3498db;">Edit Task</h1>

<%= form_for @task, url: update_task_path(@task), method: :patch do |f| %>
  <table style="width: 50%; margin: 20px auto; border-collapse: collapse; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <tr>
      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ecf0f1;">
        <%= f.label :title, "Task", style: "font-weight: bold;" %>
      </td>
      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ecf0f1;">
        <%= f.text_field :title, placeholder: 'Task Name', value: @task.title, style: "width: 100%; padding: 8px; box-sizing: border-box; margin-top: 5px; margin-bottom: 10px; border: 1px solid #bdc3c7; border-radius: 4px; font-size: 16px;" %>
      </td>
    </tr>
     <tr>
  <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ecf0f1;">
    <%= f.label :status, "Status", style: "font-weight: bold;" %>
  </td>
  <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ecf0f1;">
    <%= f.collection_select :status, [['Pending','pending'],['Ongoing','ongoing'],['Completed','completed']], :second, :first, { prompt: 'Select'}, { selected: @task.status, style: "width: 100%; padding: 8px; box-sizing: border-box; margin-top: 5px; margin-bottom: 10px; border: 1px solid #bdc3c7; border-radius: 4px; font-size: 16px;" } %>
  </td>
</tr>

      <tr>
      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ecf0f1;">
        <%= f.label :date, "Date", style: "font-weight: bold;" %>
      </td>
      <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ecf0f1;">
        <%= f.text_field :date, placeholder: 'Date', value: @task.date, style: "width: 100%; padding: 8px; box-sizing: border-box; margin-top: 5px; margin-bottom: 10px; border: 1px solid #bdc3c7; border-radius: 4px; font-size: 16px;" %>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="text-align: center;">
        <%= f.submit "Save", style: "background-color: #3498db; color: #ffffff; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>
      </td>
    </tr>
  </table>
<% end %>

<a href="<%= task_list_path %>" style="display: block; margin-top: 20px; text-align: center; color: #3498db; text-decoration: none; font-weight: bold;">Back</a>

